<!-- This code is being used from an answer on stackoverflow here:
 	http://stackoverflow.com/questions/15626796/thin-blue-progress-bar -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
 	
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />
            <gradient android:startColor="#C0C0C0" android:centerColor="#F8F8FF"
                android:centerY="0.75" android:endColor="#C0C0C0" android:angle="90" />
            <stroke android:width="0.01dp" android:color="#6B8E23" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient android:startColor="#33FFFF" android:endColor="#33FFFF"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="#33FFFF" />
            </shape>
        </clip>
    </item>
</layer-list>