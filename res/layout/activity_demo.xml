<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.webviewapp.MainActivity"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:id="@+id/slide_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_start_tut" />
    <ImageView
        android:id="@+id/slide_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/tutorial_say_name" />
    <ImageView
        android:id="@+id/slide_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/tutorial_did_he_respond" />
    <ImageView
        android:id="@+id/slide_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/tutorial_response_no" />
    <ImageView
        android:id="@+id/slide_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/tutorial_say_name" />
	<ImageView
        android:id="@+id/slide_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/tutorial_did_he_respond" />
    <ImageView
        android:id="@+id/slide_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/tutorial_response_no" />
    <ImageView
        android:id="@+id/slide_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/tutorial_say_name" />
    <ImageView
        android:id="@+id/slide_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/tutorial_did_he_respond_yes" />
    <ImageView
        android:id="@+id/slide_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/tutorial_response_yes" />
    
    <Button
        android:id="@+id/startTut"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="@drawable/btn_default_green"
        android:textColor="#FFFFFF"
        android:text="Start!" />
    
    <Button
        android:id="@+id/finish"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="@drawable/btn_default_holo_light"
        android:textColor="#FFFFFF"
        android:text="Finish" />
    
</FrameLayout>
