<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:padding="10dp" >
    
   <ImageView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center"
        android:background="#FFFFFF"
        android:padding="1dp" />
   
 	<Button 
        android:id="@+id/done"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center|right"
        android:gravity="center"
        android:background="@drawable/btn_default_holo_light"
        android:text="Get Started!"
        android:visibility="gone"
        android:textSize="25dp"
        android:textColor="#000000"/>
 	
 	<Button
 	    android:id="@+id/goToTrial"
 	    android:layout_width="150dp"
 	    android:layout_height="71dp"
 	    android:layout_marginTop="100dp"
 	    android:layout_gravity="left|center"
 	    android:background="@drawable/btn_default_holo_light"
 	    android:gravity="center"
 	    android:text="Go To Trial"
 	    android:textColor="#000000"
 	    android:textSize="25dp" />

 	<ImageView
 	    android:id="@+id/swipePic"
 	    android:layout_width="73dp"
 	    android:layout_height="71dp"
 	    android:layout_marginTop="90dp"
 	    android:layout_gravity="right|center"
 	    android:src="@drawable/tutorial_swipe" />
 	
 	<TextView
 	    android:id="@+id/text"
 	    android:layout_width="84dp"
 	    android:layout_height="wrap_content"
 	    android:layout_gravity="right|center"
 	    android:gravity="center|right"
 	    android:layout_marginTop="153dp"
 	    android:textColor="#000000"
 	    android:text="Swipe to begin tutorial" />

 	<ImageView
 	    android:id="@+id/bottom"
 	    android:layout_width="wrap_content"
 	    android:layout_height="50dp"
 	    android:layout_gravity="center|bottom"
 	    android:layout_marginBottom="10dp"
 	    android:src="@drawable/tutorial_title_bottom" />

 	<ImageView
 	    android:id="@+id/titlePic"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:visibility="gone"
 	    android:src="@drawable/tutorial_title_top" />
 	
 	<TextView
 	    android:id="@+id/lastTrial"
 	    android:layout_width="match_parent"
 	    android:layout_height="158dp"
 	    android:visibility="visible"
 	    android:layout_gravity="center|top"
 	    android:gravity="center|center"
 	    android:text="Last trial: Sep, 21st"
 	    android:textSize="50dp" />

 	<ImageView
 	    android:id="@+id/smalll_title"
 	    android:layout_width="wrap_content"
 	    android:layout_height="190dp"
 	    android:layout_gravity="center|center"
 	    android:layout_marginBottom="20dp"
 	    android:visibility="visible"
 	    android:src="@drawable/tutorial_title_small" />

"
 	
</FrameLayout>